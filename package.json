{
  "name": "confluence-to-markdown",
  "version": "1.2.0",
  "author": "Martin Lukes",
  "license": "MIT",
  "description": "Convert Confluence Pages to Markdown",
  "keywords": [
    "Confluence",
    "Markdown",
    "Confluence to Markdown"
  ],
  "bin": "./bin/confluence-to-markdown",
  "main": "./src/index.js",
  "repository": "git@github.com:meridius/confluence-to-markdown.git",
  "dependencies": {
    "cheerio": "^0.22.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "pandoc": "^0.2.0",
    "path": "^0.12.7",
    "rimraf": "^3.0.2",
    "sync-exec": "^0.6.2"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-fs": "^2.0.0",
    "concurrently": "^7.0.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-no-floating-promise": "1.0.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-promise": "5.1.0",
    "jest": "^27.5.1"
  },
  "scripts": {
    "start": "node ./src/index.js",
    "test": "jest --runInBand --coverage --config ./jest.config.json",
    "test:ci": "jest  --config ./jest.config.json --watch",
    "format:fix": "prettier --write '**/*.{js,yaml,json,md}'",
    "format": "prettier --check '**/*.{js,yaml,json,md}'",
    "lint:fix": "eslint --fix --cache --ext .js .",
    "lint:local": "concurrently 'npm run lint:fix' 'npm run format:fix'",
    "lint": "concurrently 'eslint --ext .js .' 'npm run format'"
  }
}
